{{>message}}
<h1>Login</h1>

<form class="ms-1" action="/users/login" style="display:inline-block" method="POST">
  <p>Email</p>
  <input type="text" placeholder="enter email" name="email">
  <p>Password</p>
  <input type="text" placeholder="enter your password" name="password">
  <button type="submit" style="display: block" class="mt-1">Login</button>
</form>

<form class="m-1" action="/oauth/login/facebook" method="get">
  <button type="submit">Facebook Login</button>
</form>

<div style="display:flex" class="mt-2 ms-1">
  <p>No account?</p>
  <a href="/users/register" style="display:inline">Register</a>
</div>